{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Bienvenue {{ app.user ? app.user.username : 'sur Todo List' }}</h1>
    <h2>L'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h2>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col  text-center">
            <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
        </div>
        <div class="col  text-center">
            <a href="{{ path('task_list') }}" class="btn btn-primary">Consulter la liste des tâches à faire</a>
        </div>
        <div class="col  text-center">
            <a href="{{ path('task_list', { 'isDone': 1 }) }}" class="btn btn-outline-dark">Consulter la liste des
                tâches terminées</a>
        </div>
    </div>
{% endblock %}
